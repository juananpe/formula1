<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.presentation.MainLayoutController">
   <left>
      <VBox prefHeight="500.0" prefWidth="150.0" spacing="10.0" style="-fx-background-color: #f0f0f0;">
         <children>
            <Button fx:id="driversButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onDriversButtonClick" text="Drivers">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="teamsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onTeamsButtonClick" text="Teams">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="racesButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onRacesButtonClick" text="Races">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="contentPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane> 